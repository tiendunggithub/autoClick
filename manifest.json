{
    "name": "Extension first",
    "version": "1.0.0",
    "description": "description for Extension first",
    "manifest_version": 3,
    "host_permissions": ["<all_urls>"],
    "author": "Black Pearl",
    "permissions": [
        "scripting",
        "activeTab"
    ],

    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["contentScript.js"]
        }
      ],
    "action":{
        "default_popup": "index.html",
        "default_title": "Extension Test"
    }
    
}